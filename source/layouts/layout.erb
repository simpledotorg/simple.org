<!doctype html>
<html>
<head>
  <!-- Google Analytics
  –––––––––––––––––––––––––––––––––––––––––––––––––– -->
  <script async src="https://www.googletagmanager.com/gtag/js?id=UA-121312461-1"></script>
  <script>
    window.dataLayer = window.dataLayer || [];
    function gtag(){dataLayer.push(arguments);}
    gtag('js', new Date());

    gtag('config', 'UA-121312461-1');
  </script>

  <!-- Basic Page Needs
  –––––––––––––––––––––––––––––––––––––––––––––––––– -->
  <meta charset="utf-8">
  <!-- Use the title from a page's frontmatter if it has one -->
  <title><%= current_page.data.title %> <%= t(:simple) %></title>
  <meta name="description" content="<%= t(:intro) %>">
  <meta name="author" content="<%= t(:simple) %>">

  <!-- Browser/Mobile Specific Metas
  –––––––––––––––––––––––––––––––––––––––––––––––––– -->
  <meta http-equiv="x-ua-compatible" content="ie=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1">

  <!-- Open Graph Metas
  –––––––––––––––––––––––––––––––––––––––––––––––––– -->
  <meta property="og:url"                content="http://www.simple.org/" />
  <meta property="og:type"               content="article" />
  <meta property="og:title"              content="Simple.org" />
  <meta property="og:description"        content="<%= t(:intro) %>" />
  <meta property="og:image"              content="https://simple.org/images/social.jpg" />

  <!-- CSS
  –––––––––––––––––––––––––––––––––––––––––––––––––– -->
  <%= stylesheet_link_tag "site" %>
  <style type="text/css">

      <% if lang != :en %>
        h3 {
              font-weight: 900;
              font-size: 22px;
          }
      <% end %>


  </style>

  <!-- FONT
  –––––––––––––––––––––––––––––––––––––––––––––––––– -->
  <% if lang == :hi %>
    <link href="https://fonts.googleapis.com/css?family=Hind" rel="stylesheet">
    <style type="text/css">
        body {
            font-family: Hind, sans-serif;
        }
    </style>
  <% end %>

  <!-- JS
  –––––––––––––––––––––––––––––––––––––––––––––––––– -->
  <!-- <%= javascript_include_tag "site" %> -->

  <!-- Favicon
  –––––––––––––––––––––––––––––––––––––––––––––––––– -->
  <link rel="icon" type="image/png" href="/images/favicon.png">

</head>
<body class="<%= t(:lang) %>">
    
    <div class="feature">
        <!--video autoplay muted loop id="feature-video">
          <source src="images/screens.mp4" type="video/mp4">
        </video-->
    </div>

    <div class="half">
        <div class="contents <%= t(:lang) %>">
        <nav>
            <h1><a href="<%= localized_url("/") %>"><%= t(:simple) %></a></h1>
            <a class="link" href="<%= localized_url("/about") %>"><%= t(:about) %></a>
            <!--a class="link" href="<%= localized_url("/features") %>"><%= t(:features) %></a-->
            <a class="link" href="https://github.com/simpledotorg/"><%= t(:github) %></a>
        </nav>

          <!--div class="languages small">
              <a href="/<%= global_current_url %>" class="lang-en">English</a>
              <a href="/pn/<%= global_current_url %>" class="lang-pn">ਪੰਜਾਬੀ</a>
              <a href="/hi/<%= global_current_url %>#" class="lang-hi">हिंदी</a>
          </div-->

          <%= yield %>

          <footer class="small">
              <a href="<%= localized_url("/privacy") %>"><%= t(:privacy) %></a>
              <a href="https://opensource.org/licenses/MIT"><%= t(:MIT) %></a>
              <a href="https://www.resolvetosavelives.org/contact"><%= t(:contact) %></a>
              <span>* Note: All patients in screenshots are fake</span>
          </footer>
        </div>
    </div>
</body>
</html>
