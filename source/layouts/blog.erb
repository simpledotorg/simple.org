<!doctype html>
  <html>
  <head>
    <!-- Google Analytics
    –––––––––––––––––––––––––––––––––––––––––––––––––– -->
    <script async src="https://www.googletagmanager.com/gtag/js?id=UA-121312461-1"></script>
    <script>
      window.dataLayer = window.dataLayer || [];
      function gtag(){dataLayer.push(arguments);}
      gtag('js', new Date());

      gtag('config', 'UA-121312461-1');
    </script>
    <!-- Basic Page Needs
    –––––––––––––––––––––––––––––––––––––––––––––––––– -->
    <meta charset="utf-8">
    <!-- Use the title from a page's frontmatter if it has one -->
    <title><%= current_page.data.title %> <%= t(:simple) %></title>
    <meta name="description" content="<%= t(:intro) %>">
    <meta name="author" content="<%= t(:simple) %>">
    <!-- Font Awesome
    –––––––––––––––––––––––––––––––––––––––––––––––––– -->
    <script src="https://kit.fontawesome.com/72c701f5ae.js" crossorigin="anonymous"></script>
    <!-- Browser/Mobile Specific Metas
    –––––––––––––––––––––––––––––––––––––––––––––––––– -->
    <meta http-equiv="x-ua-compatible" content="ie=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <!-- Open Graph Metas
    –––––––––––––––––––––––––––––––––––––––––––––––––– -->
    <meta property="og:url"                content="http://www.simple.org/" />
    <meta property="og:type"               content="article" />
    <meta property="og:title"              content="<%= current_page.data.title %> / Simple.org" />
    <meta property="og:description"        content="<%= t(:intro) %>" />
    <meta property="og:image"              content="https://simple.org/images/social.jpg" />

    <meta name="twitter:card" content="summary_large_image">
    <meta name="twitter:site" content="@resolvetsl">
    <meta name="twitter:title" content="Simple">
    <meta name="twitter:description" content="<%= t(:intro) %>">
    <meta name="twitter:creator" content="@resolvetsl">
    <meta name="twitter:image:src" content="https://simple.org/images/<%= current_page.data.social %>">
    <!-- CSS
    –––––––––––––––––––––––––––––––––––––––––––––––––– -->
    <%= stylesheet_link_tag "blog" %>
    <style type="text/css">
      <% if lang != :en %>
        h3 { font-weight: 900; font-size: 22px; }
      <% end %>
    </style>
    <!-- Fix for Flash of Unstyled Content
    –––––––––––––––––––––––––––––––––––––––––––––––––– -->    
    <style type="text/css">
      .hidden { display:none; }
    </style>
    <script type="text/javascript" src="/scripts/jquery.js"></script>
    <script type="text/javascript">
      $('html').addClass('hidden');
      $(document).ready(function() {    
          $(window).on('load', function () {...});
        $('html').show();  
      });  
    </script>
    <!-- FONT
    –––––––––––––––––––––––––––––––––––––––––––––––––– -->
    <% if lang == :hi %>
      <link href="https://fonts.googleapis.com/css?family=Hind" rel="stylesheet">
      <style type="text/css">
          body { font-family: Hind, sans-serif; }
      </style>
    <% end %>
    <!-- Favicon
    –––––––––––––––––––––––––––––––––––––––––––––––––– -->
    <link rel="icon" type="image/png" href="/images/favicon.png">
  </head>
  <body class="<%= t(:lang) %> body-blog">
    <div class="mr-45pt-large p-40px pt-80px-large px-0px-large">
      <div class="header mw-600px mx-auto-large">
        <%= partial "partials/nav" %>
      </div>
    </div>
    <div class="contents">
      <main class="mw-xlarge mx-auto">
        <%= yield %>
      </main>
      <footer class="small">
        <a href="<%= localized_url("/screens/") %>">Screenshots</a>
        <a href="<%= localized_url("/privacy/") %>"><%= t(:privacy) %></a>
        <a href="<%= localized_url("/license/") %>">Open source license</a>
        <a href="<%= localized_url("/digitalprinciples/") %>">Digital principles</a>
        <a href="<%= localized_url("/contact/") %>"><%= t(:contact) %></a>
        <span>* Note: All patients in screenshots are fake</span>
      </footer>
    </div>
    <%= javascript_include_tag "javascript/nav" %>
    <script src="https://cdn.jsdelivr.net/npm/lazyload@2.0.0-rc.2/lazyload.js"></script>
    <script>
      lazyload();
    </script>
  </body>
</html>